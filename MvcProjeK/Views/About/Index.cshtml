@using EntityLayer.Concrete
@model List<About>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Veri Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlık</th>
        <th>Durum</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.AboutID</td>
    <td>Başlık</td>
    @if (item.AboutStatus)
    {
        <td><a href="/About/ChangeStatus/@item.AboutID" class="btn btn-danger">Pasif Yap</a></td>
    }
    else
    {
        <td><a href="/About/ChangeStatus/@item.AboutID" class="btn btn-warning">Aktif Yap</a></td>
    }


</tr>

    }


</table>

@Html.Action("AboutPartial","About")