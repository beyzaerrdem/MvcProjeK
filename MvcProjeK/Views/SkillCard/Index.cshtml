@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewBag.Title = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Kartım</title>
  
    <link href="~/AdminLTE-3.0.4/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/AdminLTE-3.0.4/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/AdminLTE-3.0.4/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Yetenek Kartım</h1>
        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->
                <div class="profile-grid logo wthree">
                    <img src="~/AdminLTE-3.0.4/web/images/img1.jpg" alt="">
                    <h2>Beyza Erdem </h2>
                    <p>Yazılım Mühendisi</p>

                </div>
                <h3 class="title">Yetenekler</h3>
                <div class="col-md-6 skills-right bar_group">
                    @foreach (var item in Model)
                    {
                        <div class='bar_group__bar thin' label=@item.SkillName value=@item.SkillLevel></div>
                    }

                </div>
                <!--bar-js-->
                <script src="~/AdminLTE-3.0.4/web/js/bars.js"></script>
           
            </div>

            <a href="/SkillCard/AddSkill/" class="btn btn-info">Yetenek Ekle</a>
            <a href="/SkillCard/UpdateSkill/" class="btn btn-warning">Yetenekleri Güncelle</a>
               
        </div>
        <!-- copyright -->
        <div class="copyright">
            <p> 2021 | MVC Proje Kampı</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>